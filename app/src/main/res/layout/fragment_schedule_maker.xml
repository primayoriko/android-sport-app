<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_container_schedule_maker"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="35dp"
    android:orientation="vertical"
    tools:context=".ui.main.scheduler.ScheduleMakerFragment" >

    <EditText
        android:id="@+id/etScheduleTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="15dp"
        android:hint="Schedule Title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:gravity="center"
            android:textAlignment="center"
            android:textSize="14sp"
            android:text="Type:"/>

        <RadioGroup
            android:id="@+id/rgScheduleType"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:layout_weight="0.7"
            android:orientation="horizontal"
            android:gravity="center">

            <RadioButton
                android:id="@+id/radioScheduleTypeRunning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:textSize="14sp"
                android:text="Running" />

            <RadioButton
                android:id="@+id/radioScheduleTypeCycling"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:textSize="14sp"
                android:text="Cycling" />

        </RadioGroup>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:textAlignment="center"
        android:textSize="16sp"
        android:textFontWeight="10"
        android:text="Pick a Time" />

    <TimePicker
        android:id="@+id/tpScheduleTime"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:timePickerMode="spinner"
        android:scaleX=".8"
        android:scaleY=".8" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textAlignment="center"
        android:textSize="16sp"
        android:textFontWeight="10"
        android:text="Pick a Date" />

    <DatePicker
        android:id="@+id/tpScheduleDate"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:datePickerMode="spinner"
        android:calendarViewShown="false"
        android:scaleX=".8"
        android:scaleY=".8" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnScheduleMaker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="8dp"
            android:paddingHorizontal="18dp"
            android:gravity="center"
            android:textFontWeight="10"
            android:textSize="16sp"
            android:text="Create" />

    </LinearLayout>

</LinearLayout>